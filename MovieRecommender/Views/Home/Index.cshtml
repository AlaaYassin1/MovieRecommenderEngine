@{
    ViewData["Title"] = "Welcome to CineMatch";
}

<!-- Hero Section -->
<div class="text-center mb-5 animate-fade-up">
    <div class="hero-content">
        <div class="mb-4">
            <i class="fas fa-film display-1 text-warning mb-4 animate-pulse"></i>
        </div>
        <h1 class="display-2 fw-bold text-enhanced-heading mb-4">
            Welcome to <span class="text-gradient">CineMatch</span>
        </h1>
        <p class="lead text-enhanced opacity-90 mb-5 px-md-5">
            Discover your next favorite movie with our intelligent recommendation engine.
            Powered by advanced AI and machine learning algorithms.
        </p>
        <div class="d-flex flex-column flex-md-row gap-3 justify-content-center">
            <a asp-controller="Movie" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3 fw-bold">
                <i class="fas fa-rocket me-2"></i>
                Start Discovering
            </a>
            <button class="btn btn-outline-light btn-lg px-5 py-3 fw-bold" data-bs-toggle="modal"
                data-bs-target="#howItWorksModal">
                <i class="fas fa-play-circle me-2"></i>
                How It Works
            </button>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="glass-card h-100 p-4 text-center animate-fade-up" style="animation-delay: 0.2s;">
            <div class="feature-icon mb-3">
                <i class="fas fa-brain display-4 text-primary"></i>
            </div>
            <h4 class="fw-bold text-enhanced mb-3">Smart AI Engine</h4>
            <p class="text-enhanced opacity-90">
                Our advanced machine learning algorithms analyze your movie preferences
                to suggest films you'll absolutely love.
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card h-100 p-4 text-center animate-fade-up" style="animation-delay: 0.4s;">
            <div class="feature-icon mb-3">
                <i class="fas fa-users display-4 text-success"></i>
            </div>
            <h4 class="fw-bold text-enhanced mb-3">Collaborative Filtering</h4>
            <p class="text-enhanced opacity-90">
                Benefit from the collective wisdom of millions of movie ratings
                to discover hidden gems and popular favorites.
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card h-100 p-4 text-center animate-fade-up" style="animation-delay: 0.6s;">
            <div class="feature-icon mb-3">
                <i class="fas fa-bolt display-4 text-warning"></i>
            </div>
            <h4 class="fw-bold text-enhanced mb-3">Lightning Fast</h4>
            <p class="text-enhanced opacity-90">
                Get personalized recommendations in seconds with our
                optimized recommendation engine and modern interface.
            </p>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="glass-card p-5 mb-5 animate-fade-up" style="animation-delay: 0.8s;">
    <h3 class="text-center fw-bold text-enhanced-heading mb-5">
        <i class="fas fa-chart-bar me-2 text-info"></i>
        Trusted by Movie Lovers Worldwide
    </h3>
    <div class="row g-4 text-center">
        <div class="col-6 col-md-3">
            <div class="stat-item">
                <div class="stat-number text-primary fw-bold display-5" data-count="10000">0</div>
                <div class="stat-label text-enhanced opacity-90 fw-medium">Movies Available</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-item">
                <div class="stat-number text-success fw-bold display-5" data-count="1000000">0</div>
                <div class="stat-label text-enhanced opacity-90 fw-medium">User Ratings</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-item">
                <div class="stat-number text-warning fw-bold display-5" data-count="95">0</div>
                <div class="stat-label text-enhanced opacity-90 fw-medium">Accuracy %</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-item">
                <div class="stat-number text-info fw-bold display-5" data-count="50000">0</div>
                <div class="stat-label text-enhanced opacity-90 fw-medium">Happy Users</div>
