                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-4 flex-shrink-0"
                                style="width: 60px; height: 60px;">
                                <i class="fas fa-star fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-2">3. Get Perfect Recommendations</h5>
                                <p class="mb-0 text-muted">Receive a curated list of movies tailored specifically to
                                    your taste, ranked by relevance and quality.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <a asp-controller="Movie" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-rocket me-2"></i>Try It Now
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Initialize animations
            initAnimations();

            // Start counter animations
            animateCounters();

            // Add floating particles
            createFloatingElements();
        });

        function initAnimations() {
            // Staggered fade-up animations
            $('.animate-fade-up').each(function (index) {
                $(this).css({
                    'animation-delay': (index * 0.2) + 's'
                });
            });

            // Pulse animation for the film icon
            $('.animate-pulse').css('animation', 'pulse 2s infinite ease-in-out');
        }

        function animateCounters() {
            $('.stat-number').each(function () {
                const $this = $(this);
                const finalValue = parseInt($this.data('count'));
                const duration = 2000; // 2 seconds
                const increment = finalValue / (duration / 50); // Update every 50ms
                let currentValue = 0;

                const timer = setInterval(() => {
                    currentValue += increment;
                    if (currentValue >= finalValue) {
                        currentValue = finalValue;
                        clearInterval(timer);
                    }

                    // Format large numbers
                    let displayValue = Math.floor(currentValue);
                    if (displayValue >= 1000000) {
                        displayValue = (displayValue / 1000000).toFixed(1) + 'M+';
                    } else if (displayValue >= 1000) {
                        displayValue = (displayValue / 1000).toFixed(0) + 'K+';
                    } else if ($this.data('count') === 95) {
                        displayValue = displayValue + '%';
                    } else {
                        displayValue = displayValue.toLocaleString() + '+';
                    }

                    $this.text(displayValue);
                }, 50);

                // Start animation when element comes into view
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            // Start the counter
                            observer.disconnect();
                        }
                    });
                });

                observer.observe(this);
            });
        }

        function createFloatingElements() {
            const elements = ['🎬', '🍿', '🎭', '🎪', '🌟'];

            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const element = $('<div class="floating-element"></div>');
                    element.text(elements[Math.floor(Math.random() * elements.length)]);
                    element.css({
                        position: 'fixed',
                        fontSize: Math.random() * 20 + 10 + 'px',
                        left: Math.random() * 100 + '%',
                        top: '110%',
                        opacity: Math.random() * 0.7 + 0.3,
                        pointerEvents: 'none',
                        zIndex: -1,
                        userSelect: 'none'
                    });

                    $('body').append(element);

                    // Animate upward
                    element.animate({
                        top: '-10%',
                        left: '+=' + (Math.random() * 200 - 100) + 'px'
                    }, Math.random() * 10000 + 5000, 'linear', function () {
                        $(this).remove();
                    });

                }, i * 500);
            }
        }
    </script>
}